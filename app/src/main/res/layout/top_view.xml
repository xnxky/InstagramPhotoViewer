<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/profile_image_min_size"
        android:minWidth="@dimen/profile_image_min_size"
        android:id="@+id/user_profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <com.xxy.instagramclient.view.NameLocationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_location"
        android:gravity="center"
        android:layout_marginLeft="@dimen/topview_comp_margin"
        android:layout_marginStart="@dimen/topview_comp_margin"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/user_profile"
        android:layout_toRightOf="@id/user_profile"
        android:layout_toEndOf="@id/user_profile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/created_time"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/user_profile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clock"
        android:layout_marginRight="@dimen/topview_comp_margin"
        android:layout_marginEnd="@dimen/topview_comp_margin"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/user_profile"
        android:layout_toLeftOf="@id/created_time"
        android:layout_toStartOf="@id/created_time"/>

</RelativeLayout>
